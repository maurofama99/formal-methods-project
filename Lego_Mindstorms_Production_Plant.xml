		<declaration>const int tot_segments = 5; // # of segments in the conveyor belt +1
bool belt[tot_segments] = {1,0,0,0,0}; // # 1 if piece on segment, 0 otherwise

void shift() { 

    int i;
    bool temp = belt[tot_segments-1];
    for (i = tot_segments-1; i &gt; 0; i--){
        belt[i] = belt[i-1];
    }    
    belt[0] = temp;

}</declaration>
